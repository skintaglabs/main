% neurips_2024.sty - Simplified NeurIPS 2024 style
% Based on official NeurIPS formatting guidelines
% For full version, download from: https://neurips.cc/Conferences/2024/PaperInformation/StyleFiles

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2024}[2024/01/01 NeurIPS 2024 Style]

\newif\if@final\@finalfalse
\DeclareOption{final}{\@finaltrue}
\DeclareOption{preprint}{\@finalfalse}
\DeclareOption*{\PackageWarning{neurips_2024}{Unknown option '\CurrentOption'}}
\ProcessOptions\relax

% Page layout
\RequirePackage[verbose=true,letterpaper]{geometry}
\AtBeginDocument{
  \newgeometry{
    textheight=9in,
    textwidth=5.5in,
    top=1in,
    headheight=12pt,
    headsep=25pt,
    footskip=30pt
  }
}

% Fonts
\RequirePackage{times}

% Math
\RequirePackage{amsmath,amssymb}

% Citations
\RequirePackage{natbib}

% Colors for links
\RequirePackage{xcolor}
\definecolor{linkcolor}{rgb}{0.1,0.1,0.5}

% Hyperlinks
\RequirePackage[colorlinks=true,linkcolor=linkcolor,citecolor=linkcolor,urlcolor=linkcolor]{hyperref}

% Title formatting
\def\@maketitle{%
  \vbox to 2.5in{%
    \vspace*{0.5in}
    \begin{center}%
      {\LARGE\bf \@title \par}%
      \vskip 0.3in
      {\large
        \lineskip .5em
        \begin{tabular}[t]{c}%
          \@author
        \end{tabular}\par}%
    \end{center}%
    \vfill
  }%
}

% Abstract
\renewenvironment{abstract}{%
  \centerline{\large\bf Abstract}%
  \vspace{0.5ex}%
  \begin{quote}%
}{%
  \end{quote}%
}

% Section formatting
\renewcommand\section{\@startsection {section}{1}{\z@}%
  {-3.5ex \@plus -1ex \@minus -.2ex}%
  {2.3ex \@plus.2ex}%
  {\normalfont\Large\bfseries}}
\renewcommand\subsection{\@startsection{subsection}{2}{\z@}%
  {-3.25ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\normalfont\large\bfseries}}
\renewcommand\subsubsection{\@startsection{subsubsection}{3}{\z@}%
  {-3.25ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\normalfont\normalsize\bfseries}}

% Footnotes
\renewcommand\footnoterule{%
  \kern-3\p@
  \hrule width .4\columnwidth
  \kern 2.6\p@}

% Page numbers
\if@final
  \pagenumbering{arabic}
\else
  \pagenumbering{arabic}
\fi

\endinput
